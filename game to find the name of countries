print('Xush kelibsiz shaharlar o`yniga')
used_cities = []
last_letter = random.choice(shaharlar)[0]
for i in range(100):
    print('oxirgi harfi: ' + last_letter)
    user_input = input('shaharni ismini kiriting (o`yindan chiqish uchun"chiqish" so`zini yozing): ')

    if user_input.lower() == 'chiqish':
        print('o`yin uchun raxmat!')
        break

    if user_input not in shaharlar:
        print('Bunaqa shahar ro`yxatda yo`q.boshqattan urinib ko`ring.')
        continue

    if user_input in used_cities:
        print('Bu shahar uje nomlangan.Boshqattan urinib ko`ring.')
        continue

    used_cities.append(user_input)
    last_letter = user_input[-1]

    availabel_cities = [city for city in shaharlar if city[0].lower() == last_letter.lower()]
    if not availabel_cities:
        print("Siz aytgan harfga davlatlar tugadi '" + last_letter + "'. siz yutingiz!")
        break
    computer_city = random.choice(availabel_cities)
    used_cities.append(computer_city)
    last_letter = computer_city[-1]
    print('kopyuter tanladi:' + computer_city)
